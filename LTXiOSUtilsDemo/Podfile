# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'LTXiOSUtilsDemo' do
  source 'https://github.com/CocoaPods/Specs.git' #公有库地址
  source 'https://github.com/Coder-Star/LTXSpecs.git' #私有库地址
  platform :ios, '10.0'
  use_frameworks!

  pod 'LTXiOSUtils',:path => '../' # 基础功能库

  # 本地配置
  pod 'R.swift' # 资源映射
  pod 'SwiftLint' # 代码规范限制，使用swiftlint autocorrect 可自动修复一部分格式问题

  #图片相关
  pod 'Kingfisher' # 图片预览

  #工具类
  pod 'SwiftyUserDefaults' # UserDefaults存储
  pod 'SwifterSwift' # Swift相关扩展
  pod 'IQKeyboardManagerSwift' # 键盘控制
  pod 'QorumLogs','0.9' #日志


  #UI控件及处理等
  pod 'BRPickerView' # 选择器，OC库
  pod 'UITextView+Placeholder' # UITextView添加Placeholder属性，OC库
  pod 'ZYCornerRadius' #  UIImageView高性能设置圆角，OC库
  pod 'UITableView+FDTemplateLayoutCell' #  UITableView缓存高度，OC库


  #收录
  #  pod 'XCGLogger','6.1.0' # 日志工具，可以写入文件等

  target 'LTXiOSUtilsDemoTests' do
    inherit! :search_paths

  end

  target 'LTXiOSUtilsDemoUITests' do
    inherit! :search_paths
    
  end

end

