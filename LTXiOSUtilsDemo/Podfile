# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'LTXiOSUtilsDemo' do
#  source 'https://github.com/CocoaPods/Specs.git' #公有库地址
  source 'https://cdn.cocoapods.org/' #公有库地址,使用CDN，pod 1.7版本后
  source 'https://github.com/Coder-Star/LTXSpecs.git' #私有库地址
  platform :ios, '10.0'
  use_frameworks!

  pod 'LTXiOSUtils',:path => '../' # 基础功能库

  # LTXiOSUtils 所需要的库，下面为指定版本需要

  #'LTXiOSUtils/Component'
  pod 'MBProgressHUD','1.1.0'

  #'LTXiOSUtils/Network'
  pod 'SwiftyJSON','5.0.0'
  pod 'Moya','13.0.1'
  pod 'Alamofire','4.9.1'
  
  #'LTXiOSUtils/Resource'
  pod 'Localize-Swift','3.1.0'

  #'LTXiOSUtils/ViewController'
  pod 'SnapKit','5.0.1'

  # 本地配置
  pod 'R.swift' # 资源映射
  pod 'SwiftLint' # 代码规范限制，使用swiftlint autocorrect 可自动修复一部分格式问题

  #图片相关
  pod 'Kingfisher' # 图片预览

  #工具类
  pod 'SwiftyUserDefaults' # UserDefaults存储
  pod 'SwifterSwift' # Swift相关扩展
  pod 'IQKeyboardManagerSwift' # 键盘控制
  pod 'QorumLogs','0.9' #日志
  pod 'SwiftDate','6.1.0' #时间工具
  pod 'GDPerformanceView-Swift','2.0.3' #显示屏幕FPS
  pod 'PluggableAppDelegate' #AppDelegate瘦身、解耦

  #UI控件及处理等
  pod 'UITextView+Placeholder' # UITextView添加Placeholder属性，OC库
  pod 'ZYCornerRadius' #  UIImageView高性能设置圆角，OC库
  pod 'UITableView+FDTemplateLayoutCell' #  UITableView缓存高度，OC库

  #Rx
#  pod 'RxSwift'
  pod 'RxCocoa' # RxSwift是通用RxAPI的实现，并不涉及任何任何 Cocoa 或 UIKit 类，RxCocoa依赖RxSwift

  target 'LTXiOSUtilsDemoTests' do
    inherit! :search_paths

  end

  target 'LTXiOSUtilsDemoUITests' do
    inherit! :search_paths
    
  end

end

